<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!-- Target SMAPI’s supported runtime -->
    <TargetFramework>net7.0</TargetFramework>
    <!-- Your mod’s assembly name -->
    <AssemblyName>AlonsMOTD</AssemblyName>
    <!-- Automatically produce a ZIP for releases -->
    <EnableModZip>true</EnableModZip>
    <!-- Name the output folder/ZIP -->
    <ModFolderName>AlonsMOTD</ModFolderName>
  </PropertyGroup>

  <ItemGroup>
    <!-- Pull in the SMAPI, Stardew Valley and MonoGame references for you -->
    <PackageReference Include="Pathoschild.Stardew.ModBuildConfig" Version="4.4.0" />
  </ItemGroup>

</Project>
