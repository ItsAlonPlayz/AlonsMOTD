  <ItemGroup>
    <!-- This pulls in SMAPI, Stardew Valley, MonoGame, etc., for you -->
    <PackageReference Include="Pathoschild.Stardew.ModBuildConfig" Version="4.4.0" />
  </ItemGroup>

</Project>
