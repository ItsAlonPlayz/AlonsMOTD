<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!-- target / assembly setup -->
    <TargetFramework>net7.0</TargetFramework>
    <AssemblyName>AlonsMOTD</AssemblyName>

    <!-- auto-zip release for you -->
    <EnableModZip>true</EnableModZip>
    <ModFolderName>AlonsMOTD</ModFolderName>

    <!-- specify where the game lives on the GitHub-Actions Windows runner -->
    <GamePath>E:\SteamLibrary\steamapps\common\Stardew Valley</GamePath>
  </PropertyGroup>

  <ItemGroup>
    <!-- pull in SMAPI & game assemblies automatically -->
    <PackageReference Include="Pathoschild.Stardew.ModBuildConfig" Version="4.4.0" />
  </ItemGroup>

</Project>
