<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!-- Target SMAPI’s supported runtime -->
    <TargetFramework>net7.0</TargetFramework>
    <!-- Your mod’s assembly name -->
    <AssemblyName>AlonsMOTD</AssemblyName>

    <!-- Auto-zip your release -->
    <EnableModZip>true</EnableModZip>
    <ModFolderName>AlonsMOTD</ModFolderName>

    <!-- Point ModBuildConfig to the game folder on Windows runners -->
    <CustomGamePath>$(ProgramFiles)\Steam\steamapps\common\Stardew Valley</CustomGamePath>
  </PropertyGroup>

  <ItemGroup>
    <!-- Pull in SMAPI/Stardew/MonoGame references and zip support -->
    <PackageReference Include="Pathoschild.Stardew.ModBuildConfig" Version="4.4.0" />
  </ItemGroup>

</Project>
