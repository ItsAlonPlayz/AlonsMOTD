<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <AssemblyName>AlonsMOTD</AssemblyName>

    <!-- Automatically zip your release build -->
    <EnableModZip>true</EnableModZip>
    <ModFolderName>AlonsMOTD</ModFolderName>
  </PropertyGroup>

  <!-- On CI (GitHub Actions), point to the runnerâ€™s Steam install -->
  <PropertyGroup Condition="'$(CI)' == 'true'">
    <GamePath>C:\Program Files\Steam\steamapps\common\Stardew Valley</GamePath>
  </PropertyGroup>

  <!-- Locally (your PC), point to your E: drive -->
  <PropertyGroup Condition="'$(CI)' != 'true'">
    <GamePath>E:\SteamLibrary\steamapps\common\Stardew Valley</GamePath>
  </PropertyGroup>

  <ItemGroup>
    <!-- This pulls in all SMAPI/Stardew/MonoGame references for you -->
    <PackageReference Include="Pathoschild.Stardew.ModBuildConfig" Version="4.4.0" />
  </ItemGroup>

</Project>
